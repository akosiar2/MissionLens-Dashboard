@page "/alpha1"
@using MissionLensDashboard.Shared.Component
@using MissionLensDashboard.Data

<PageTitle>Dashboard</PageTitle>
<BreadcrumbComponent Items="breadcrumbs" />

<div class="my-3" ><h4>Dashboard</h4></div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <WidgetComponent Title="AI Agent Questions" >
                <p class="text-muted-foreground text-sm my-0">Number of disliked and flag questions</p>
                <div class="font-semibold fs-4">14</div>
            </WidgetComponent>
        </div>
        <div class="col-md-3">
            <WidgetComponent Title="Document Views" >
                <p class="text-muted-foreground text-sm my-0">Number of documents view</p>
                <div class="font-semibold fs-4">54</div>
            </WidgetComponent>
        </div>
        <div class="col-md-3">
            <WidgetComponent Title="Chatbot Queries" >
                <p class="text-muted-foreground text-sm my-0">frequency of chatbot usage</p>
                <div class="font-semibold fs-4">112</div>
            </WidgetComponent>
        </div>
        <div class="col-md-3">
            <WidgetComponent Title="Users Feedback" >
                <div class="row">
                    <div class="col-3">
                        <p class="text-muted-foreground text-sm my-0">Likes</p>
                    </div>
                    <div class="col-3">
                        <p class="text-muted-foreground text-sm my-0">Dislikes</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <div class="font-semibold fs-4">0</div>
                    </div>
                    <div class="col-3">
                        <div class="font-semibold fs-4">1</div>
                    </div>
                </div>
               
            </WidgetComponent>
        </div>
        <div class="col-md-3">
            <WidgetComponent Title="Bot Flag" >
                <p class="text-muted-foreground text-sm my-0">if Bot don't know answers</p>
                <div class="font-semibold fs-4">14</div>
            </WidgetComponent>
        </div>
    </div>
    
</div>
<div class="container-fluid">
    <DataTableComponent></DataTableComponent>
</div>



@code {

    private List<BreadcrumbItem> breadcrumbs = new()
    {
        new BreadcrumbItem { Title = "Home", Url = "/", IsActive = false },
        new BreadcrumbItem { Title = "Alpha1", Url = "/Alpha1", IsActive = true }
    };
}