@page "/auth/signin"
@layout AnonymousLayout

@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Components
@using System.Security.Claims
@using MissionLensDashboard.Data
@using MissionLensDashboard.Services
@inject CustomAuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavManager

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-ocean-green">
    <div class="card shadow-sm p-4" style="width: 380px; border-radius: 8px;">
        <!-- Logo -->
        <div class="text-center mb-3">
            <img src="img/mission-lens-logo.webp" alt="Mission Lens" style="height: 50px;" />
            <h5 class="mt-3 text-black">Sign in to your account</h5>
        </div>

            <!-- Form -->
            <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <!-- Email -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Email Address</label>
                <InputText @bind-Value="loginModel.Email" class="form-control shadow-sm rounded hover:border-green-500 border-input" placeholder="you@email.com" />
                </div>

                <!-- Password -->
                <div class="mb-2">
                    <label class="form-label fw-bold">Password</label>
                <InputText @bind-Value="loginModel.Password" type="password" class="form-control shadow-sm rounded hover:border-green-500 border-input" placeholder="********" />
                </div>

                <!-- Forgot Password -->
                <div class="mb-3 text-end">
                    <a href="/forgot-password" class="small text-decoration-none">Password forgotten?</a>
                </div>

                <!-- Sign In Button -->
                <button type="submit" class="btn btn-dark w-100">
                    Sign in with Email →
                </button>
            </EditForm>

            <!-- Footer -->
            <div class="text-center mt-3">
                <small>Do not have an account yet? <a href="/register">Sign up</a></small>
            </div>
        </div>
    </div>


@code {
    private LoginModel loginModel = new();

    private void HandleLogin()
    {
        if (loginModel.Email == "admin@mail.com" && loginModel.Password == "admin098")
        {
            UserModel user = new() { Email = loginModel.Email, Password = loginModel.Password };
            AuthenticationStateProvider.AuthenticateUser(loginModel.Email, user);

            NavManager.NavigateTo("/alpha1", true);
        }
    }

}

