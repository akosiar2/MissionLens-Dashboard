@page "/auth/signin"
@layout AnonymousLayout

@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Components
@using System.Security.Claims
@using MissionLensDashboard.Data
@using MissionLensDashboard.Services
@inject CustomAuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavManager


<h3>Login</h3>

@if (!isLoggedIn)
{
    <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
        <InputText @bind-Value="loginModel.Username" placeholder="Username" class="form-control mb-2" />
        <InputText @bind-Value="loginModel.Password" placeholder="Password" type="password" class="form-control mb-2" />
        <button class="btn btn-primary">Login</button>
    </EditForm>
}
else
{
    <p>You are already logged in. Redirecting...</p>
}

@code {
    private LoginModel loginModel = new();
    private bool isLoggedIn;

    

    private async Task HandleLogin()
    {
        if (loginModel.Username == "admin" && loginModel.Password == "admin098")
        {
            AuthenticationStateProvider.AuthenticateUser(loginModel.Username);
            
            NavManager.NavigateTo("/alpha1", true);
        }
    }

    
}
